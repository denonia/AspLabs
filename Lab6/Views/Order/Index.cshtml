@model OrderViewModel

@{
}

<h1 class="display-4">Order</h1>

<p>
    <strong>Article amount: </strong> @Model.ArticleAmount
</p>
<p>
    <strong>Your address: </strong> @Model.User.Address
</p>
<p>
    <strong>Your phone number: </strong> @Model.User.PhoneNumber
</p>

<form asp-controller="Order" asp-action="Confirm" method="post">

    @for (var i = 0; i < Model.ArticleAmount; i++)
    {
        <h4>Article @(i+1)</h4>
        
        <div class="form-group">
            <label for="name">Article title</label>
            <input type="text" class="form-control" id="title" name=@($"products[{i}].title") placeholder="Enter article title">
        </div>
        
        <div class="form-group">
            <label for="amount">Amount</label>
            <input type="number" class="form-control" id="amount" name=@($"products[{i}].amount") placeholder="Enter amount for this article">
        </div>
        
        <br/>
    }

    <button type="submit" class="btn btn-primary">Order</button>
</form>