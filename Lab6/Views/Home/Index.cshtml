@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

@if (Model.Age == null)
{
    <h1 class="display-4">Welcome</h1>

    <form>
        <div class="form-group w-25">
            <label for="age">Age</label>
            <input type="number" class="form-control" id="age" name="age" placeholder="Enter your age" min="0">
            <small class="form-text text-muted">You must be older than 16 to order.</small>
        </div>
        <button type="submit" class="btn btn-primary">Continue</button>
    </form>
}
else if (Model.Age < 16)
{
    <h1 class="display-4">Unlucky bro</h1>
    <p>You must be older than 16 to order.</p>
}
else
{
    <form asp-controller="Order" asp-action="Index" method="post">
        <div class="form-group w-50">
            <label for="phone">Phone number</label>
            <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter your phone number">
        </div>
        <div class="form-group w-50">
            <label for="address">Address</label>
            <input type="text" class="form-control" id="address" name="address" placeholder="Enter your shipping address">
        </div>
        <div class="form-group w-50">
            <label for="amount">Article amount</label>
            <input type="number" class="form-control" id="amount" name="amount" placeholder="Enter how many articles you would like to order">
        </div>
        <button type="submit" class="btn btn-primary">Continue</button>
    </form>
}