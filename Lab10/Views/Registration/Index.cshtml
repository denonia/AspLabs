@model RegistrationModel

<h2 xmlns="http://www.w3.org/1999/html">Реєстрація</h2>

<form method="post" asp-action="Success">
    <div class="form-group">
        <label asp-for="Registration.Name">Ім'я</label>
        <input type="text" class="form-control" asp-for="Registration.Name" placeholder="Введіть ім'я та прізвище">
        <span asp-validation-for="Registration.Name" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="Registration.Email">Email</label>
        <input type="email" class="form-control" asp-for="Registration.Email" placeholder="Введіть email">
        <span asp-validation-for="Registration.Email" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="Registration.Date">Бажана дата консультації</label>
        <input type="date" class="form-control" asp-for="Registration.Date" aria-describedby="dateHelp" placeholder="Бажана дата консультації">
        <small id="emailHelp" class="form-text text-muted">Консультації можливі лише у будні дні.</small><br/>
        <span asp-validation-for="Registration.Date" class="text-danger" />
    </div>
    <div class="form-group">
        <label asp-for="Registration.Course">Курс</label>
        <select asp-for="Registration.Course" asp-items="Model.Courses" class="form-control" aria-describedby="courseHelp">
            <option value="">Оберіть курс</option>
        </select>
        <small id="courseHelp" class="form-text text-muted">Консультація щодо продукту «Основи» не може проходити по понеділках</small><br/>
        <span asp-validation-for="Registration.Course" class="text-danger" />
    </div>

    <button type="submit" class="btn btn-primary">Зареєструватись</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}